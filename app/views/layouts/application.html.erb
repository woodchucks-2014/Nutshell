<!DOCTYPE html>
<html>
<head>
  <title>Nutshell</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <link href='http://fonts.googleapis.com/css?family=Open+Sans+Condensed:300' rel='stylesheet' type='text/css'>
  <link href='http://fonts.googleapis.com/css?family=Unkempt:400,700' rel='stylesheet' type='text/css'>
</head>
<body>
  <nav>

  <% if current_user %>
  <nav>
    <div class="left-nav">
    <button><%= link_to current_user.username, current_user %></button>
    <button><%= link_to 'Home', :root  %></button>
    </div>
    <div class="right-nav">
    <button><%= link_to 'Create!', new_nut_path %></button>
    <button><%= link_to 'Sign Out', sign_out_path(current_user) %></button>
    </div>
  </nav>
  <% end %>

    </nav>
    <div class="main">

<%= yield %>
    </div>
</body>
</html>
